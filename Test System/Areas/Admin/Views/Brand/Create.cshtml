<div class="container">

    @section Scripts
    {
        @if (@TempData["Notification"] is not null)
        {
            <script>
                toastr.success('@TempData["Notification"]')
            </script>
        }
    }
    <div class="row mb-3 align-items-center my-3">
        <div class="col-md-6">
            <h2 class="display-6">Create new Brand</h2>
        </div>
    </div>
    <div class="row my-3">
        <div class="col-12">
            <form method="post" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input id="name" class="form-control" name="Name" />
                </div>
                <div class="mb-3 form-floating">
                    <textarea id="description"
                              class="form-control"
                              placeholder="Leave a Description here"
                              style="height:100px" name="Description"></textarea>
                    <label for="description">Your Description Here...</label>
                </div>
                <div class="mb-3">
                    <label for="status" class="form-label">Status</label>
                    <select name="Status" id="status" class="form-select">
                        <option value="true" selected>Active</option>
                        <option value="false">InActive</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
    </div>
</div>
